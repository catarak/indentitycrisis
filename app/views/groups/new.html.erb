            <div class="col-lg-11">
              <%#= f.link_to_add "+", :accounts %> add another account
              <span><button id="new-account-form", class="btn btn-primary btn-circle"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button> <strong>add another account</strong></span>
            </div>
          </div> -->
          <div class="form-group">
            <div class="col-lg-9 col-lg-offset-3">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>