<%= form_tag(user_invitation_path(@user), remote: true) do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <%= text_field_tag :email, "", class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= submit_tag %>
  </div>
<% end %>